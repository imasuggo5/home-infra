---
apiVersion: v1
kind: ConfigMap
metadata:
  name: fluentd
  namespace: fluentd
data:
  fluentd.conf: |
    <match **>
      @type stdout
    </match>

    <match **>
      @type loki
      url "http://loki.loki.svc.cluster.local:3100"
      flush_interval 10s
      flush_at_shutdown true
      buffer_chunk_limit 1m
    </match>

    <source>
      @type forward
      bind 0.0.0.0
      port 24224
    </source>

    <source>
      @type http
      bind 0.0.0.0
      port 9880
    </source>
